@model UpdateProductDetailDto
@{
    ViewData["Title"] = "UpdateProductDetail";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>>Ürün Bilgisi Sayfası</h4>
                <div class="bs-example" data-example-id="bordered-table">
                    <form method="post">
                        <input type="hidden" name="ProductId" asp-for="ProductId" />
                        <input type="hidden" name="ProductDetailId" asp-for="ProductDetailId" />
                        <label for="ProductDescription">Ürün Açıklaması</label>
                        <textarea textarea rows="5" class="form-control" asp-for="ProductDescription"></textarea>
                        <br />
                        <label for="ProductInfo">Ürün Bilgisi</label>
                        <textarea textarea rows="5" class="form-control" asp-for="ProductInfo"></textarea>
                        <br />
                        <button class="btn btn-primary">Ürün Bilgisini Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>