@model CreateOrderAddressDto
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/UILayout/_UILayout.cshtml";
}

<!-- Checkout Start -->
<div class="container-fluid">
	<div class="row px-xl-5">
		<div class="col-lg-8">
			<h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Sipariş Teslimat Adresi</span></h5>
			<div class="bg-light p-30 mb-5">
				<form method="post">
					<div class="row">
						<div class="col-md-6 form-group">
							<label>Adınız</label>
							<input class="form-control" type="text" asp-for="FirstName" placeholder="Hasan">
						</div>
						<div class="col-md-6 form-group">
							<label>Soyadınız</label>
							<input class="form-control" type="text" asp-for="LastName" placeholder="Sarı">
						</div>
						<div class="col-md-6 form-group">
							<label>E-mail</label>
							<input class="form-control" type="text" asp-for="Email" placeholder="example@email.com">
						</div>
						<div class="col-md-6 form-group">
							<label>Telefon Numarası</label>
							<input class="form-control" type="text" asp-for="PhoneNumber" placeholder="+90 123 456 78 90">
						</div>
						<div class="col-md-6 form-group">
							<label>Adres Satır 1</label>
							<input class="form-control" type="text" asp-for="Detail1" placeholder="Adresiniz">
						</div>
						<div class="col-md-6 form-group">
							<label>Adres Satır 2</label>
							<input class="form-control" type="text" asp-for="Detail2" placeholder="Adresiniz">
						</div>
						<div class="col-md-6 form-group">
							<label>Ülke</label>
							<input class="form-control" type="text" asp-for="Country" placeholder="Ülke">
						</div>
						<div class="col-md-6 form-group">
							<label>Şehir</label>
							<input class="form-control" type="text" asp-for="City" placeholder="Şehir">
						</div>
						<div class="col-md-6 form-group">
							<label>İlçe</label>
							<input class="form-control" type="text" asp-for="District" placeholder="İlçe">
						</div>
						<div class="col-md-6 form-group">
							<label>Posta Kodu</label>
							<input class="form-control" type="text" asp-for="ZipCode" placeholder="123">
						</div>
					</div>
				</form>
			</div>
		</div>
		<div class="col-lg-4">
			<h5 class="section-title position-relative text-uppercase mb-3">
				<span class="bg-secondary pr-3">Sipariş Özeti</span>
			</h5>
			@await Component.InvokeAsync("_OrderSummaryComponentPartial")

			@await Component.InvokeAsync("_PaymentMethodComponentPartial")
		</div>
	</div>
</div>

<!-- Checkout End -->
